public class demo3 {
    public static void main(String[] args) {       
        toBin(6) ;
       };
         public static void toBin(int num) {
            if(num>0)
            {
                toBin(num/2);
                System.out.println(num%2);
            }
         }
           public static void toBin2(int num) {
            while(num>0)
            {
                System.out.println(num%2);
                num=num/2;
            }
         }
        public static int getSum(int num) {
            if(num==1)
            {
                return 1;
            }
            return num+getSum(num-1);
        }
}
